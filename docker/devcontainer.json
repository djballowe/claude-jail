{
  "name": "Claude Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USERNAME": "claude",
      "TZ": "${localEnv:TZ:America/Los_Angeles}",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.1",
      "GO_VERSION": "1.25.6"
    }
  },
  "runArgs": ["--cap-add=NET_ADMIN", "--cap-add=NET_RAW"],
  "remoteUser": "claude",
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/claude/.claude,type=volume"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/claude/projects,type=bind,consistency=delegated",
  "workspaceFolder": "/home/claude/projects",
  "postStartCommand": "claude update"
}
